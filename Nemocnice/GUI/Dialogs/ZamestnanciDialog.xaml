<Window x:Class="Nemocnice.GUI.Dialogs.ZamestnanciDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nemocnice.GUI.Dialogs"
        mc:Ignorable="d"
        Title="ZamestnanciDialog" Height="420" Width="400">
    <Grid>
        <StackPanel Margin="10,10,10,0" Height="394" VerticalAlignment="Top">
            <Label>Jmeno:</Label>
            <TextBox x:Name="JmenoTb" />
            <Label>Prijmeni:</Label>
            <TextBox x:Name="PrijmeniTb" />
            <Label>Plat:</Label>
            <TextBox x:Name="PlatTb" />
            <Label Content="Oddeleni:"/>
            <ComboBox x:Name="OddeleniCb" />
            <Label Content="Nadrizeny:"/>
            <ComboBox x:Name="NadrizenyCb" />
            <Label Content="Adresa:"/>
            <ComboBox x:Name="AdresaCb" />
            <Label>Druh:</Label>
            <ComboBox x:Name="DruhCb" />
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="OK" IsDefault="True" Click="OK_Click" Width="80" />
                <Button Content="Cancel" IsCancel="True" Click="Cancel_Click" Width="80" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
