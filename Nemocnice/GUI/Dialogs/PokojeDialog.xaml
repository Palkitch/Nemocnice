<Window x:Class="Nemocnice.GUI.Dialogs.PokojeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nemocnice.GUI.Dialogs"
        mc:Ignorable="d"
        Title="PokojeDialog" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label>Cislo Pokoje:</Label>
            <TextBox x:Name="CisloPokojeTb" />
            <Label Content="Oddeleni:"/>
            <ComboBox x:Name="OddeleniCb" />
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="OK" IsDefault="True" Click="OK_Click" Width="80" />
                <Button Content="Cancel" IsCancel="True" Click="Cancel_Click" Width="80" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
