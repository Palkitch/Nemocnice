<Window x:Class="Nemocnice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nemocnice"
        mc:Ignorable="d"
        Title="Nemocnice" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Admin">
            <Grid>
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF908E8D" Offset="1"/>
                        <GradientStop Color="#FFC6D6D5" Offset="0.012"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250*"/>
                    <ColumnDefinition Width="544*"/>
                </Grid.ColumnDefinitions>
                <DataGrid x:Name="grid" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Column="1" BorderBrush="White"/>
                <Button x:Name="printButton" Grid.Column="0" Content="Zobraz" Click="printButtonOnAction" Margin="10,173,10,0" Height="35" VerticalAlignment="Top"/>
                <Label Content="Menu" Grid.Column="0" FontSize="16" HorizontalContentAlignment="Center" Margin="0,10,0,0" Height="30" VerticalAlignment="Top"/>
                <Label Content="Tabulka" Grid.Column="0" Height="30" FontSize="16" Margin="10,103,10,0" VerticalAlignment="Top"/>
                <ComboBox x:Name="comboBox" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="10,138,10,0" Height="30" VerticalAlignment="Top"/>
                <Label Content="Logy" Grid.Column="0" Height="30" FontSize="16" Margin="10,221,10,0" VerticalAlignment="Top"/>
                <Button x:Name="printButton_Kopírovat" Grid.Column="0" Content="Zobraz" Click="printButtonOnAction" Margin="10,251,10,0" Height="35" VerticalAlignment="Top"/>
            </Grid>
        </TabItem>
        <TabItem Header="Profil">
            <Grid Background="#FFE5E5E5">
                <Label HorizontalAlignment="Left" Margin="32,31,0,348" Width="48"/>
                <ComboBox x:Name="profileRolesCb" Width="120" HorizontalAlignment="Left" HorizontalContentAlignment="Stretch" VerticalAlignment="Top" Height="22" Margin="80,31,0,0"/>
                <Image x:Name="profileImg" HorizontalAlignment="Left" Height="135" Margin="214,10,0,0" VerticalAlignment="Top" Width="120"/>
                <TextBox x:Name="profileUserTb" HorizontalAlignment="Left" Margin="80,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="26" VerticalContentAlignment="Center"/>
                <Label Content="Role" HorizontalAlignment="Left" Margin="32,29,0,0" VerticalAlignment="Top"/>
                <Label Content="User" HorizontalAlignment="Left" Margin="32,60,0,0" VerticalAlignment="Top"/>
                <Button x:Name="profileInsertPictureButton" Content="Vyberte obrázek" HorizontalAlignment="Left" Margin="38,91,0,0" VerticalAlignment="Top" Height="30" Width="162" Click="profileInsertPictureButton_Click"/>
                <Label x:Name="profileLoadedLbl" Content="" HorizontalAlignment="Left" Margin="38,126,0,0" VerticalAlignment="Top" Width="162" Height="30"/>
            </Grid>
        </TabItem>
        <TabItem HorizontalAlignment="Center" Height="20" Header="TabItem" VerticalAlignment="Center" Width="54">
            <Grid Background="#FFE5E5E5"/>
        </TabItem>
        <TabItem HorizontalAlignment="Center" Height="20" Header="TabItem" VerticalAlignment="Center" Width="54">
            <Grid Background="#FFE5E5E5"/>
        </TabItem>
        <TabItem HorizontalAlignment="Center" Height="20" Header="TabItem" VerticalAlignment="Center" Width="54">
            <Grid Background="#FFE5E5E5"/>
        </TabItem>
    </TabControl>

</Window>
